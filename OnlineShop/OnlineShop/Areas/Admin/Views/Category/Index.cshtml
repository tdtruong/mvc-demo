@model List<Models.Framework.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Category List
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>CreatedDate</th>
                            <th>Order</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                           @foreach (var cate in Model)
                           {
                            <tr class="odd gradeX">
                                <td>@cate.ID</td>
                                <td>@cate.Name</td>
                                <td>@(cate.CreatedDate.HasValue? cate.CreatedDate.Value.ToString("yyyy/MM/dd") : "")</td>
                                <td class="center">@cate.Order.GetValueOrDefault(0)</td>
                                <td class="center">@(cate.Status.GetValueOrDefault(false) ? "Active" : "Block")</td>
                            </tr>
                           }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
