@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model List<Model.EF.User>

@section header { User management}
<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Add new user", "Create", "User", null, new { @class="btn btn-primary" })
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Group ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr class="odd gradeX">
                        <td>@u.UserName</td>
                        <td>@u.GroupID</td>
                        <td>@u.Name</td>
                        <td>@u.Address</td>
                        <td>@u.Email</td>
                        <td>@u.Phone</td>
                        <td>@(u.Status ? "Active" : "Block")</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = @u.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = @u.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = @u.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

