
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<Model.EF.Slide>)ViewBag.Slides;
    var newProducts = (List<Model.EF.Product>)ViewBag.ListNewProducts;
    var featureProducts = (List<Model.EF.Product>)ViewBag.ListFeatureProducts;
}

@section slide {
    <div class="header_slide">
        <div class="header_bottom_left">
            <div class="categories">
                @{ Html.RenderAction("ProductCategory", "Product"); }
            </div>
        </div>
        <div class="header_bottom_right">
            <div class="slider">
                <div id="slider">
                    <div id="mover">
                        @foreach (var slide in slides)
                        {
                            <div class="slide">
                                <div class="slider-img">
                                    <a href="preview.html"><img src="@slide.Image" alt="learn more" /></a>
                                </div>
                                <div class="slider-text">
                                    <h1>Clearance<br><span>SALE</span></h1>
                                    <h2>UPTo 20% OFF</h2>
                                    <div class="features_list">
                                        <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                    </div>
                                    <a href="preview.html" class="button">Shop Now</a>
                                </div>
                                <div class="clear"></div>
                            </div>
                        }
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>New Products</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var p in newProducts)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="/chi-tiet/@p.MetaTitle-@p.ID"><img src="@p.Image" alt="@p.Name" /></a>
                <h2>@p.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(p.Price.HasValue ? p.Price.Value.ToString("N0") : "Contact")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/add-to-cart?productId=@p.ID&quantity=1">Add to Cart</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Feature Products</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var p in featureProducts)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="/chi-tiet/@p.MetaTitle-@p.ID"><img src="@p.Image" alt="@p.Name" /></a>
                <h2>@p.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(p.Price.HasValue ? p.Price.Value.ToString("N0") : "Contact")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/add-to-cart?productId=@p.ID&quantity=1">Add to Cart</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
</div>
